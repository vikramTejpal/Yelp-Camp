<%- include("../partials/header")%>
<div class="container">
<h1 style="text-align:center;">
	Welcome!! Add a new campground
</h1>
<div style="width: 30%; margin: 0 auto;">	
	<form action="/campgrounds" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="name" placeholder="Entetr name of the campground">
		</div>	
		<div class="form-group">
			<input class="form-control" type="text" name="image" placeholder="Enter URL of the image">
		</div>
		<div class="form-group">
			<input class="form-control" type="textarea" name="description" placeholder="Enter the desc">
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">submit</button>
		</div>
		<a href="/campgrounds">go back to all campgrounds</a>
	</form>
</div>	

</div>
<%- include("../partials/footer")%>